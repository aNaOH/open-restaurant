{% extends "/templates/admin.php.twig" %}

{% block title %}Pedidos{% endblock %}

{% block name %}Pedidos{% endblock %}

{% block content %}
<div class="container mx-auto p-6">
    <h1 class="text-2xl font-bold text-blue-700 mb-6 flex items-center gap-2">
        <i data-feather="clipboard"></i> Pedidos
    </h1>
    <div class="bg-white rounded-xl shadow p-4">
        {% if orders|length == 0 %}
            <div class="text-gray-500 text-center py-8">No hay pedidos registrados.</div>
        {% else %}
        <table class="min-w-full divide-y divide-blue-100">
            <thead>
                <tr>
                    <th class="px-4 py-2 text-left text-xs font-semibold text-blue-700">ID</th>
                    <th class="px-4 py-2 text-left text-xs font-semibold text-blue-700">Mesa</th>
                    <th class="px-4 py-2 text-left text-xs font-semibold text-blue-700">Fecha</th>
                    <th class="px-4 py-2 text-left text-xs font-semibold text-blue-700">Total</th>
                    <th class="px-4 py-2 text-left text-xs font-semibold text-blue-700">Estado</th>
                    <th class="px-4 py-2"></th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                <tr class="hover:bg-blue-50 transition">
                    <td class="px-4 py-2">{{ order.id }}</td>
                    <td class="px-4 py-2">{{ order.table }}</td>
                    <td class="px-4 py-2">{{ order.date }} {{ order.time|slice(0,5) }}</td>
                    <td class="px-4 py-2">{{ order.getTotal()|number_format(2, '.', ',') }} €</td>
                    <td class="px-4 py-2">
                        <span class="inline-block px-2 py-1 rounded text-xs font-semibold
                            {% if order.status == 'completed' %}bg-green-100 text-green-700
                            {% elseif order.status == 'pending' %}bg-yellow-100 text-yellow-700
                            {% elseif order.status == 'not_started' %}bg-gray-100 text-gray-700
                            {% else %}bg-gray-100 text-gray-500{% endif %}">
                            {% if order.status == 'completed' %}Completado
                            {% elseif order.status == 'pending' %}En progreso
                            {% elseif order.status == 'not_started' %}Pendiente
                            {% elseif order.status == 'empty' %}Vacío
                            {% else %}{{ order.status|capitalize }}{% endif %}
                        </span>
                    </td>
                    <td class="px-4 py-2 text-right">
                        <a href="/admin/orders/{{ order.id }}" class="text-blue-600 hover:underline font-semibold">Ver detalles</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% endif %}
    </div>
</div>
{% endblock %}
