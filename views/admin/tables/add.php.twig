{% extends "/templates/admin.php.twig" %}

{% block title %}Crear mesa{% endblock %}

{% block name %}Crear mesa{% endblock %}
{% block content %}
    <div class="max-w-lg mx-auto bg-white rounded-2xl p-8">
        <form action="/admin/tables/add" method="POST" class="flex flex-col gap-4">
            <div>
                <label for="name" class="block text-gray-700 text-sm font-bold mb-2">Nombre</label>
                <input type="text" id="name" name="name" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
            </div>
            <div>
                <label for="capacity" class="block text-gray-700 text-sm font-bold mb-2">Capacidad</label>
                <input type="number" id="capacity" name="capacity" required min="1" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
            </div>
            <button type="submit" class="btn primary flex items-center gap-2"><i data-feather="plus-square"></i> Crear mesa</button>
        </form>
    </div>
{% endblock %}