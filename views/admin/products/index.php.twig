{% extends "/templates/admin.php.twig" %}

{% block title %}Productos{% endblock %}

{% block name %}Productos{% endblock %}
{% block content %}
    <div class="flex flex-col h-full">
        <div class="flex items-center justify-end mb-4">
            <a href="/admin/products/add" class="btn primary">Añadir producto</a>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-lg">
                <thead>
                    <tr class="bg-gray-100 text-gray-600 uppercase text-sm leading-normal">
                        <th class="py-3 px-6 text-left">ID</th>
                        <th class="py-3 px-6 text-left">Nombre</th>
                        <th class="py-3 px-6 text-left">Descripción</th>
                        <th class="py-3 px-6 text-left">Precio</th>
                        <th class="py-3 px-6 text-left">Categoría</th>
                        <th class="py-3 px-6 text-left">Acciones</th>
                    </tr>
                </thead>
                <tbody class="text-gray-600 text-sm font-light">
                    {% for product in products %}
                        <tr class="border-b border-gray-200 hover:bg-gray-100">
                            <td class="py-3 px-6 text-left">{{ product.id }}</td>
                            <td class="py-3 px-6 text-left">{{ product.name }}</td>
                            <td class="py-3 px-6 text-left">{{ product.description }}</td>
                            <td class="py-3 px-6 text-left">{{ product.price }}</td>
                            <td class="py-3 px-6 text-left">
                                {% if product.category %}
                                    {{ product.category.name }}
                                {% else %}
                                    Ninguna
                                {% endif %}
                            </td>
                            <td class="py-3 px-6 text-left">
                                <a href="/admin/products/edit/{{ product.id }}" class="btn secondary">Editar</a>
                                <form action="/admin/products/delete/{{ product.id }}" method="POST" class="inline-block delete-entity-form" data-entity="product">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="btn danger ml-4">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {{ include('/components/delete_modal.php.twig') }}
{% endblock %}

{% block scripts %}
<script>
(function() {
    const modal = document.getElementById('deleteConfirmModal');
    let formToDelete = null;
    document.querySelectorAll('form.delete-entity-form').forEach(function(form) {
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            formToDelete = form;
            document.getElementById('deleteModalMessage').textContent = '¿Estás seguro de que deseas eliminar este elemento?';
            document.getElementById('confirmDeleteBtn').disabled = false;
            modal.showModal();
            setTimeout(() => {
                modal.classList.add('fade-in');
                modal.classList.remove('fade-out');
            }, 10);
        });
    });
    document.getElementById('closeDeleteModalBtn').onclick = closeModal;
    document.getElementById('cancelDeleteBtn').onclick = closeModal;
    document.getElementById('confirmDeleteBtn').onclick = function() {
        if (formToDelete) {
            formToDelete.submit();
        }
        closeModal();
    };
    function closeModal() {
        modal.classList.remove('fade-in');
        modal.classList.add('fade-out');
        setTimeout(() => {
            modal.close();
        }, 300);
    }
})();
</script>
{% endblock %}