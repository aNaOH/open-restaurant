{% extends "/templates/wizard.php.twig" %}

{% block steps %}
    <div class="flex items-center justify-center gap-2 mb-4">
        <div class="flex flex-col items-center">
            <span class="bg-blue-200 text-blue-700 rounded-full w-8 h-8 flex items-center justify-center font-bold">1</span>
            <span class="text-xs mt-1 text-blue-700">Base de datos</span>
        </div>
        <span class="w-6 h-1 bg-blue-200 rounded"></span>
        <div class="flex flex-col items-center">
            <span class="bg-blue-200 text-blue-700 rounded-full w-8 h-8 flex items-center justify-center font-bold">2</span>
            <span class="text-xs mt-1 text-blue-700">Restaurante</span>
        </div>
        <span class="w-6 h-1 bg-blue-200 rounded"></span>
        <div class="flex flex-col items-center">
            <span class="bg-blue-200 text-blue-700 rounded-full w-8 h-8 flex items-center justify-center font-bold">3</span>
            <span class="text-xs mt-1 text-blue-700">Administrador</span>
        </div>
        <span class="w-6 h-1 bg-blue-500 rounded"></span>
        <div class="flex flex-col items-center">
            <span class="bg-blue-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold">4</span>
            <span class="text-xs mt-1 text-blue-700 font-semibold">Características</span>
        </div>
    </div>
{% endblock %}

{% block content %}
    <form action="/features" method="post" class="space-y-5">
        <div class="flex flex-col items-center mb-6">
            <span class="bg-blue-100 rounded-full p-3 mb-2">
                <i data-feather="gift" class="w-8 h-8 text-blue-600"></i>
            </span>
            <h2 class="text-xl font-bold text-blue-700 mb-2">Características adicionales</h2>
            <p class="text-gray-600 text-center">Activa los módulos opcionales para tu restaurante.</p>
        </div>
        <div class="flex items-center gap-2">
            <input type="checkbox" id="feature_promos" name="features[]" value="promos" class="accent-blue-500">
            <label for="feature_promos" class="text-gray-700 flex items-center gap-1">
                <i data-feather="percent" class="w-4 h-4 text-blue-400"></i>
                Códigos promocionales
            </label>
        </div>
        <div class="flex items-center gap-2">
            <input type="checkbox" id="feature_loyalty" name="features[]" value="loyalty" class="accent-blue-500">
            <label for="feature_loyalty" class="text-gray-700 flex items-center gap-1">
                <i data-feather="star" class="w-4 h-4 text-blue-400"></i>
                Programa de fidelización
            </label>
        </div>
        <div class="flex justify-end mt-6">
            <button type="submit" class="flex items-center gap-2 px-5 py-2 rounded-full font-semibold text-white bg-blue-500 shadow hover:bg-cyan-500 transition-all duration-200 text-lg">
                <i data-feather="check" class="w-5 h-5"></i>
                Finalizar
            </button>
        </div>
    </form>
{% endblock %}